{
  "name": "ts-mockup-generator",
  "version": "0.4.0",
  "description": "👷‍♂️🖼✅ A simple mockup generator based on 💪 TypeScript, 🖼 JIMP, and 👷‍♂️ Puppeteer.",
  "author": "Simon Halimonov <hello@simonhalimonov.de>",
  "keywords": [
    "typescript",
    "cli",
    "puppeteer",
    "jimp",
    "screenshot",
    "mockup"
  ],
  "license": "MIT",
  "main": "./dist/index.js",
  "bin": "./dist/cli.js",
  "files": [
    "dist/**/*",
    "!dist/**/*.test.js"
  ],
  "scripts": {
    "dev": "ts-node ./src/cli.ts",
    "clean": "rimraf ./dist/ ./exec/",
    "prepublish": "cp -R src/device dist/",
    "build": "npm run clean && tsc",
    "test": "npm run build && ava --verbose",
    "bundle": "npm run build && pkg . --out-dir ./exec/"
  },
  "devDependencies": {
    "@types/puppeteer": "^1.20.2",
    "ava": "^2.2.0",
    "pkg": "^4.4.0",
    "rimraf": "^2.6.3",
    "ts-node": "^8.3.0",
    "typescript": "^3.7.2"
  },
  "dependencies": {
    "@types/lodash": "^4.14.149",
    "comlink": "^4.1.0",
    "commander": "^2.20.0",
    "greenlet": "^1.1.0",
    "jimp": "^0.8.5",
    "lodash": "^4.17.15",
    "lodash.chunk": "^4.2.0",
    "puppeteer": "^2.0.0",
    "systeminformation": "^5.6.4"
  }
}
